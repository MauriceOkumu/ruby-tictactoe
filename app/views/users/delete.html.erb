<h1>Users#delete</h1>

<%= form_for(@user, :method => 'delete') do |f| %>
<p>Are you sure you want to delete this user?</p>

    <p><%= "Name : #{@user.first_name} #{@user.last_name}"%></p>
    <p><%= "Email : #{@user.email}"%></p>


<div class='form-buttons'>
  <%= f.submit('Delete user')%>
</div>
<% end %>  
